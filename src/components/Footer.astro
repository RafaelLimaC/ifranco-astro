<footer>
  <section class="contact">
    <div class="contact-wrapper" id="contact">
      <div class="contact-info" data-aos="fade-right">
        <h4>Entre em contato</h4>
        <div class="contact-info__email">
          <img src="/icons/icon_message.svg" alt="" /><span
            >contato@ifrancoengenharia.com.br</span
          >
        </div>
        <div>
          <img src="/icons/icon_phone.svg" alt="" /><span
            >(22) 99922 6307 | Isabela Franco</span
          >
        </div>
        <div>
          <img src="/icons/icon_phone.svg" alt="" /><span
            >(22) 99873 6275 | Mariane Riedmann</span
          >
        </div>
        <div>
          <img src="/icons/icon_location.svg" alt="" /><span class="endereco"
            >R. Franklin Delano Roosevelt, 87, sala 2 Cavaleiros, Macaé, RJ</span
          >
        </div>
      </div>
      <div class="contact-form" data-aos="fade-left">
        <img src="/icons/ifranco_LOGO_mini-reverse.svg" alt="" />
        <span>Fale conosco <br />e faça um orçamento</span>
        <form action="https://formspree.io/f/xdoqpdny" method="POST">
          <input type="text" name="Nome" placeholder="Nome" required />
