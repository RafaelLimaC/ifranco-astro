    <p>
      I N R Franco Solucoes em Engenharia LTDA © 2024. Todos os direitos
      reservados.
    </p>
  </div>
</footer>

<style lang="scss">
  .contact {
    background: url(/contact-background.svg);
    background-position: center;
    position: relative;
    font-family: var(--ff-space-grotesk);
    overflow: hidden;

    .contact-wrapper {
      max-width: 1640px;
      margin: 0 auto;
      padding: 6rem 1rem;

      display: flex;
      justify-content: space-between;

      .contact-info {
        display: flex;
        flex-direction: column;
        gap: 2.5rem;

        h4 {
          font-size: 8rem;
          font-weight: 500;
          max-width: 10ch;
          line-height: 1;
          padding-bottom: 3rem;
        }

        div {
          display: flex;
          gap: 2rem;
          width: fit-content;

          span {
            font-size: 1.5rem;
            max-width: 37ch;
            letter-spacing: 0.05em;
            font-family: var(--ff-open-sans);
          }

          .endereco {
            font-weight: 500;
            padding-left: 10px;
          }
        }
      }

      .contact-form {
        border-radius: 2rem;
        background-color: #fff;
        padding: 2.5rem 7rem 7rem 7rem;
        display: flex;
        flex-direction: column;
        justify-content: space-between;

        img {
          height: 22px;
          margin-bottom: 1.25rem;
        }

        span {
          font-size: 1.7rem;
          color: var(--neutral-color-900);
          font-weight: 700;
          letter-spacing: 0.01em;
          text-align: center;
          margin-bottom: 2.5rem;
        }

        form {
          display: flex;
          flex-direction: column;
          gap: 1.25rem;

          input,
          select {
            border: 2px solid var(--neutral-color-300);
            padding: 1rem 1rem;
            color: var(--neutral-color-700);
            min-width: 300px;
            width: 100%;
            font-family: var(--ff-open-sans);
            font-size: 0.875rem;
          }

          input:focus,
          select:focus {
            outline: none;
            border-color: var(--primary-color-400);
          }

          input:not(:placeholder-shown) {
            border-color: var(--secondary-color-400);
          }

          select:valid {
            border-color: var(--secondary-color-400);
          }

          input::placeholder {
            color: var(--neutral-color-300);
          }

          input:first-child {
            background: url(/icons/icon_user-solid.svg) no-repeat 95% center;
            background-size: 15px;
          }

          input:nth-child(2) {
            background: url(/icons/icon_envelope-solid.svg) no-repeat 95% center;
            background-size: 15px;
          }

          input:nth-child(3) {
            background: url(/icons/icon_phone-solid.svg) no-repeat 95% center;
            background-size: 15px;
          }

          select {
            background: url(/icons/icon_chevron-down-solid.svg) no-repeat 95%
              center;
            background-size: 15px;
            appearance: none;
          }

          .submit {
            color: #fff;
            border: none;
            text-transform: uppercase;
            font-size: 1rem;
            padding: 0.75rem 1.25rem;
            text-align: left;
            font-family: var(--ff-space-grotesk);
            font-weight: 300;
            letter-spacing: 0.05em;
            margin-top: 1.5rem;
            cursor: pointer;

            background: url("/icons/icon_arrow-right.svg")
              var(--primary-color-400) no-repeat 95% center;
            background-size: 15px;
          }
        }
      }
    }
  }

  .footer-wrapper {
    background-color: var(--neutral-color-900);
    padding: 3rem 1rem 3rem 1rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    overflow: hidden;

    .footer-logo {
      width: 272px;
      height: 175px;
    }

    img {
      padding: 1.5rem 0;
    }

    .footer__links__menu {
      display: flex;
      gap: 0.6rem;
    }

    p {
      font-family: var(--ff-open-sans);
      letter-spacing: 0.01em;
      color: #fcfdfb;
      text-align: center;
    }
  }

  @media only screen and (max-width: 1249px) {
    .contact {
      .contact-wrapper {
        padding: 4rem 1rem;

        .contact-info {
          gap: 2rem;
          margin-right: 1rem;
          align-items: flex-start;

          h4 {
            font-size: clamp(5.5rem, 5vw, 6.5rem);
          }

          div {
            span {
              font-size: 1.125rem;
            }
          }
        }

        .contact-form {
          padding: 2.5rem 4rem 4rem 4rem;
        }
      }
    }
  }

  @media only screen and (max-width: 900px) {
    .contact {
      .contact-wrapper {
        display: flex;
        flex-direction: column;
        gap: 2rem;
        margin: 0 auto;
        align-items: center;

        .contact-info {
          align-items: center;

          h4 {
            text-align: center;
          }
        }
      }
    }
  }

  @media only screen and (max-width: 600px) {
    .contact {
      .contact-wrapper {
        .contact-info {
          align-items: center;

          h4 {
            font-size: 4rem;
          }

          .contact-info__email {
            display: none;
          }
        }

        .contact-form {
          padding: 2.5rem 1rem;
          width: 100%;

          form {
            input,
            select {
              width: 100%;
            }
          }
        }
      }
    }
  }
</style>
