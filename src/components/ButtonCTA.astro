<button class="btn-cta"><a href="#contact">Peça um orçamento</a></button>

<style lang="scss">
  .btn-cta {
    position: relative;
    padding: 0.75em 1em;
    font-size: 2rem;
    font-weight: 300;
    color: var(--neutral-color-100);
    text-transform: uppercase;
    font-family: var(--ff-space-grotesk);
    background-color: var(--primary-color-400);

    border: none;
    cursor: pointer;

    transition: padding 0.25s;

    a {
      color: var(--neutral-color-100);
      text-decoration: none;
    }

    &::after {
      content: url(/icons/icon_arrow-right-solid.svg);
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      right: 5%;
      bottom: 0;
      opacity: 0;
    }

    &:hover {
      padding: 0.75em 2.5em 0.75em 0.7em;

      &::after {
        opacity: 1;
        transition: opacity 0.25s;
      }
    }
  }

  @media only screen and (max-width: 1249px) {
    .btn-cta {
      font-size: 1.5rem;

      &::after {
        transform: scale(0.8) translateY(-60%);
      }
    }
  }

  @media only screen and (max-width: 900px) {
    .btn-cta {
      font-size: 1.25rem;

      &::after {
        transform: scale(0.7) translateY(-60%);
      }
    }
  }
</style>
